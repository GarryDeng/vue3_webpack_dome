{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      // 这样就可以对 `this` 上的数据属性进行更严格的推断`
      "strict": true,
      "jsx": "preserve",
      "baseUrl": ".",
      "paths": {
        "@src/*": ["./src/*"]
      },
      "moduleResolution": "node"
    },
    "exclude": ["node_module", "dist"]
  }